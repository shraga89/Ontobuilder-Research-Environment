<source url="http://www.allbookstores.com" interurl="http://www.allbookstores.com/search_advanced">
  <srcname>AllBookStores.com</srcname>
  <form>
    <attrgroup>
      <attr name="Author" ename="author">
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Title" ename="title">
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Subject" ename="subject">
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Print status" ename="print status">
        <domain format="radio_button">
          <value> All </value>
          <value> In print only </value>
        </domain>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="ISBN" ename="isbn">
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Format" ename="format">
        <domain format="selection_list">
          <value>All formats</value>
          <value>Hardcover</value>
          <value>Paperback</value>
          <value>e-Book</value>
          <value>&gt;Audiobook (cassette or CD)</value>
        </domain>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Publication Date" operator="yes" ename="publication date">
        <operator format="selection_list">
          <option> Before the year </option>
          <option> During the year </option>
          <option> After the year </option>
        </operator>
        <domain format="text_box" />
        <additional> (e.g. 1999)  </additional>
      </attr>
    </attrgroup>
  </form>
</source>