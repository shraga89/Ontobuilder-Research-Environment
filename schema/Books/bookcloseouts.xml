<source url="http://www.bookcloseouts.com/" interurl="http://www.bookcloseouts.com/bc/new_custom_search.asp?TAB=S">
  <srcname>bookcloseouts</srcname>
  <form>
    <attrgroup>
      <attr name="Last Name" ename="last name">
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="First Name" ename="first name">
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Title" ename="title">
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Keyword" operator="yes" ename="keyword">
        <operator format="radio_button">
          <option> Any of these words </option>
          <option> All of these words </option>
        </operator>
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Category" ename="category">
        <domain format="selection_list">
          <value>--- All Categories ---</value>
          <value>Animals &amp; Pets</value>
          <value>Audio Books</value>
          <value>Automotive</value>
          <value>Biography, Autobiography &amp; Memoirs</value>
          <value>Book Covers</value>
          <value>Business</value>
          <value>Calendars</value>
          <value>Children</value>
          <value>Coffee Table, Gift &amp; Art</value>
          <value>Computer</value>
          <value>Cooking &amp; Food</value>
          <value>Crosswords &amp; Games</value>
          <value>Easter</value>
          <value>Espionage</value>
          <value>Ethnic</value>
          <value>Family &amp; Parenting</value>
          <value>General Fiction</value>
          <value>Gift Books</value>
          <value>Health, Fitness &amp; Medical</value>
          <value>History</value>
          <value>Home &amp; Garden</value>
          <value>Humour</value>
          <value>Judaica</value>
          <value>Literature &amp; Poetry</value>
          <value>Mass Market Paperback</value>
          <value>Mystery &amp; Suspense</value>
          <value>Non-English Books</value>
          <value>Places, International &amp; Travel</value>
          <value>Reference</value>
          <value>Religion &amp; Spirituality</value>
          <value>Romance</value>
          <value>Science</value>
          <value>Science Fiction</value>
          <value>Sports</value>
          <value>Trilogy</value>
          <value>True Crime</value>
          <value>Western</value>
        </domain>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="You can narrow your search by selecting a price range from below: " ename="price">
        <domain format="selection_list">
          <value> all price ranges </value>
          <value> Less than 5 </value>
          <value> Less than 10 </value>
          <value> Less than 15 </value>
          <value> Less than 20 </value>
          <value> Less than 25 </value>
          <value> Less than 50 </value>
        </domain>
      </attr>
    </attrgroup>
  </form>
</source>