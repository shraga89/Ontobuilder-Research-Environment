<source url="http://www.lww.com" interurl="http://www.lww.com/search/advancedsearch/">
  <srcname>Lippincott Williams and Wilins</srcname>
  <form>
    <attrgroup>
      <attr name="Title" ename="title" operator="yes">
        <operator format="radio_button">
          <option> Search EXACT terms OR </option>
          <option> Search EXACT and SIMILAR terms</option>
        </operator>
        <operator format="radio_button">
          <option> Search ALL of the fields OR</option>
          <option> Search ANY of the fields</option>
        </operator>
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name=" Author" ename="author" operator="yes">
        <operator format="radio_button">
          <option> Search EXACT terms OR </option>
          <option> Search EXACT and SIMILAR terms</option>
        </operator>
        <operator format="radio_button">
          <option> Search ALL of the fields OR</option>
          <option> Search ANY of the fields</option>
        </operator>
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name=" ISBN" ename="isbn" operator="yes">
        <operator format="radio_button">
          <option> Search EXACT terms OR </option>
          <option> Search EXACT and SIMILAR terms</option>
        </operator>
        <operator format="radio_button">
          <option> Search ALL of the fields OR</option>
          <option> Search ANY of the fields</option>
        </operator>
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name=" Keywords" ename="keyword" operator="yes">
        <operator format="radio_button">
          <option> Search EXACT terms OR </option>
          <option> Search EXACT and SIMILAR terms</option>
        </operator>
        <operator format="radio_button">
          <option> Search ALL of the fields OR</option>
          <option> Search ANY of the fields</option>
        </operator>
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name=" Publication years " ename="publication year">
        <attr name="" ename="from">
          <domain format="text_box" />
        </attr>
        <attr name="" ename="to">
          <domain format="text_box" />
          <additional> (ex. 1998 to 2001) </additional>
        </attr>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name=" Include only the following formats:" ename="format">
        <domain format="text_box">
          <value>CD-ROM </value>
          <value> PDA </value>
          <value>PDA </value>
          <value>CD-ROM </value>
          <value>Print </value>
          <value>Software</value>
          <value>Unspecified</value>
          <value>Video</value>
          <value>Web </value>
        </domain>
      </attr>
    </attrgroup>
  </form>
</source>