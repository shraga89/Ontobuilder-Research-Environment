<source url="http://www.lifewaystores.com/" interurl="http://www.lifewaystores.com/lwstore/search.asp?mscssid=UXUW62W9SU7K8JVWGD3BDJCBL6W590FF">
  <srcname>life away</srcname>
  <form>
    <attrgroup>
      <attr name="Title" operator="yes" ename="title">
        <operator format="radio_button">
          <option> Exact Title </option>
          <option>Contains Phrase</option>
          <option>Title Starts With </option>
        </operator>
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name=" Author/Artist: " operator="yes" ename="author|artist">
        <operator format="radio_button">
          <option>  Full Name </option>
          <option>  Part Of Name  </option>
          <option>  Name Starts With  </option>
        </operator>
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Media Type:" ename="media type">
        <domain format="selection_list">
          <value>Any Media Type</value>
          <value>Cassette</value>
          <value>Compact Disc</value>
          <value>Printed Music</value>
          <value>Video</value>
          <value>Apparel</value>
          <value>Digital (Downloadable)</value>
          <value>DVD</value>
          <value>Events</value>
          <value>Gift</value>
          <value>Hardback</value>
          <value>Imitation Leather</value>
          <value>Jewelry</value>
          <value>Kits and Packs</value>
          <value>Leather</value>
          <value>Magnetic Closure</value>
          <value>MultiMedia</value>
          <value>Other</value>
          <value>Paperback</value>
          <value>Periodical,magazine</value>
          <value>Pearlescent</value>
          <value>Poster</value>
          <value>Set</value>
          <value>Slide Tab</value>
          <value>Snap Flap</value>
          <value>Supplies</value>
          <value>Software</value>
          <value>Toy</value>
          <value>Vinyl</value>
        </domain>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Approximate Age:" ename="age">
        <input>
          <operator format="text" name="Approximate Age:" ename="approximate" />
          <domain format="text_box" />
        </input>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Department: " ename="department">
        <domain format="selection_list">
          <value>All</value>
          <value>Bibles</value>
          <value>Books</value>
          <value>Church Resources</value>
          <value>Clearance</value>
          <value>Gifts</value>
          <value>Kids</value>
          <value>Music</value>
          <value>Software</value>
          <value>Spanish</value>
          <value>Video</value>
        </domain>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Sort By:" ename="sort by" removed="yes">
        <domain format="selection_list">
          <value>Title (Z - A)</value>
          <value>Author (A - Z)</value>
          <value>Author (Z - A)</value>
          <value>Price (Highest to Lowest)</value>
          <value>Price (Lowest to Highest)</value>
          <value>Pub Date (Earliest to Latest)</value>
          <value>Pub Date (Latest to Earliest)</value>
          <value>Most Popular</value>
        </domain>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name=" Display:" ename="display" removed="yes">
        <domain format="selection_list">
          <value>First 10</value>
          <value>First 20</value>
        </domain>
        <additional> Items Found </additional>
      </attr>
    </attrgroup>
  </form>
</source>