<source url="http://www.cokesbury.com/" interurl="http://www.cokesbury.com/advancedsearch.asp">
  <srcname>cokesbury</srcname>
  <form>
    <attrgroup>
      <attr name="Keyword search" ename="keyword">
        <domain format="text_box" />
        <additional>Enter one or more keywords. This will search the Title, Author, and Description fields for results</additional>
        <additional>Ex: Grief Healing</additional>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="First Name" ename="first name">
        <domain format="text_box" />
        <additional>Ex: Lewis </additional>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Last Name" ename="last name">
        <domain format="text_box" />
        <additional>Aiken</additional>
      </attr>
      <additional>Enter the author's first name and/or last name</additional>
    </attrgroup>
    <attrgroup>
      <attr name="Title search:" ename="title">
        <domain format="text_box" />
        <additional>Enter the entire title or one or more keywords.</additional>
        <additional>Ex: Seasons Of Grief And Healing</additional>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="ISBN or Catalog Number search:" ename="isbn|catalog number">
        <domain format="text_box" />
        <additional>Enter and ISBN number or Catalog Number.</additional>
        <additional>Ex: 0060652926</additional>
      </attr>
    </attrgroup>
  </form>
</source>