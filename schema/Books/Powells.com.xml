<source url="http://www.powells.com">
  <srcname>Powells.com</srcname>
  <form>
    <attrgroup>
      <attr name="keywords" ename="keyword">
        <input>
          <domain format="text_box" />
        </input>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="author">
        <input>
          <domain format="text_box" />
        </input>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="title">
        <input>
          <operator format="check_box">
            <option>Search for exact title</option>
          </operator>
          <domain format="text_box" />
        </input>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="ISBN">
        <input>
          <domain format="text_box" />
        </input>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="publisher">
        <input>
          <domain format="text_box" />
        </input>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="section">
        <input>
          <operator format="check_box">
            <option>Match first part of words</option>
          </operator>
          <domain format="text_box" />
        </input>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="book class" ename="class">
        <input>
          <domain format="selection_list">
            <value>All</value>
            <value>New</value>
            <value>Used</value>
            <value>Sale</value>
            <value>Used and Sale</value>
            <value>Adobe eBook Reader</value>
            <value>Gemstar eBook</value>
            <value>Microsoft Reader</value>
            <value>Palm eBook</value>
          </domain>
        </input>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="adults">
        <input>
          <domain format="selection_list" />
        </input>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="binding type" ename="binding">
        <input>
          <domain format="selection_list">
            <value>All</value>
            <value>Paperback</value>
            <value>Hardcover</value>
            <value>Video</value>
            <value>Audio Cassette</value>
            <value>Compact Disc</value>
            <value>Electronic</value>
            <value>Leather</value>
          </domain>
        </input>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="sort by">
        <input>
          <domain format="selection_list">
            <value>Title</value>
            <value>Author</value>
            <value>Price</value>
            <value>Publication Date</value>
            <value>Publisher</value>
            <value>Location</value>
          </domain>
        </input>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="then sort by">
        <input>
          <domain format="selection_list">
            <value>Title</value>
            <value>Author</value>
            <value>Price</value>
            <value>Publication Date</value>
            <value>Publisher</value>
            <value>Location</value>
          </domain>
        </input>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="location">
        <input>
          <domain format="selection_list">
            <value>All Stores</value>
            <value>Burnside</value>
            <value>Beaverton</value>
            <value>Travel</value>
            <value>Technical</value>
            <value>Cookbook</value>
            <value>Hawthorne</value>
            <value>Airport</value>
            <value>Catacombs</value>
            <value>Quimby</value>
            <value>Chalmers</value>
          </domain>
        </input>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Titles to display per page" ename="display per page ">
        <input>
          <domain format="selection_list">
            <value>10</value>
            <value>25</value>
            <value>100</value>
            <value>250</value>
          </domain>
        </input>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="">
        <input>
          <domain format="check_box">
            <value>show newly arrived used books only</value>
          </domain>
        </input>
      </attr>
    </attrgroup>
  </form>
</source>