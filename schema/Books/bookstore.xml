<source url="http://www.bookstore.co.uk/" interurl="http://www.bookstore.co.uk/">
  <srcname>bookstore</srcname>
  <form>
    <attrgroup>
      <attr name="British Book Title (keywords):" ename="title">
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Author (surname):" ename="author">
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="ISBN (without hyphens):" ename="isbn">
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="results per page" ename="result per page" removed="yes">
        <domain format="selection_list">
          <value>10</value>
          <value>20</value>
          <value>50</value>
        </domain>
        <addtional>show up to</addtional>
      </attr>
    </attrgroup>
  </form>
</source>