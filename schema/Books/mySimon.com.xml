<source url="http://www.mysimon.com/" interurl="http://www.mysimon.com/2001-4181_8-0.html?legacy=cnet">
  <srcname>mySimon.com</srcname>
  <form>
    <attrgroup>
      <attr name="title">
        <operator format="check_box">
          <option>exact title match</option>
        </operator>
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="author">
        <input>
          <domain format="text_box" />
        </input>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="keyword">
        <input>
          <domain format="text_box" />
        </input>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="" ename="format">
        <input>
          <domain format="selection_list">
            <value>Any Format</value>
            <value>Hardcover</value>
            <value>Paperback</value>
            <value>Audio</value>
          </domain>
        </input>
      </attr>
    </attrgroup>
  </form>
</source>