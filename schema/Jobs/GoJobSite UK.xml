<source url="http://www.gojobsite.co.uk/" interurl="http://www.gojobsite.co.uk/home/advsearch.html">
  <srcname>GoJobSite UK</srcname>
  <form>
    <attrgroup>
      <attr name="Job Title" level="1" ename="job title">
        <additional>I am looking for a job as a</additional>
        <additional>e.g. secretary, "personal assistant"</additional>
        <operator format="radio_button">
          <value>ANY of the above words or phrases</value>
          <value>ALL of the above words or phrases</value>
        </operator>
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Skills" level="1" ename="skills">
        <additional>I am looking for a job that requires the following skills/experience</additional>
        <additional>e.g. Word, "audio typing"</additional>
        <operator format="radio_button">
          <value>ANY of the above words or phrases</value>
          <value>ALL of the above words or phrases</value>
        </operator>
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Locations" level="1" ename="locations">
        <additional>I am looking for a job based in</additional>
        <additional>e.g. Manchester. "North West"</additional>
        <operator format="radio_button">
          <value>This area ONLY</value>
          <value>This area + 15 miles</value>
          <value>This area + 5 miles</value>
          <value>This area + 20 miles</value>
          <value>This area + 10 miles</value>
          <value>This area + 30 miles</value>
        </operator>
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Ignore" level="1" ename="ignore">
        <additional>I am not interested in any job that contains</additional>
        <additional>e.g. Manchester. "North West"</additional>
        <operator format="radio_button">
          <value>ANY part of job</value>
          <value>the LOCATION</value>
          <value>the job TITLE</value>
          <value>the job DESCRIPTION</value>
        </operator>
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Industry Sectors" ename="industry sectors">
        <additional>You may search in all of our 35 industry sectors, or select up to 4 specific sectors to search in.</additional>
        <domain format="radio_button">
          <value>Search in ALL industry sectors</value>
          <value>Accounting</value>
          <value>Graduate</value>
          <value>Production &amp; Operations</value>
          <value>Automotive</value>
          <value>Health</value>
          <value>Public</value>
          <value>Sector</value>
          <value>Aviation</value>
          <value>Human Resources</value>
          <value>Purchasing</value>
          <value>Banking &amp; Finance</value>
          <value>Information</value>
          <value>Technology</value>
          <value>Recruitment</value>
          <value>Construction</value>
          <value>Insurance</value>
          <value>Retail</value>
          <value>Consultancy</value>
          <value>Legal</value>
          <value>Sales</value>
          <value>Customer Service</value>
          <value>Logistics &amp; Transport</value>
          <value>Scientific</value>
          <value>Defence</value>
          <value>Management &amp; Executive</value>
          <value>Secretarial &amp; Administration</value>
          <value>Distribution</value>
          <value>Manufacturing</value>
          <value>Telecommunications</value>
          <value>Education</value>
          <value>Marketing</value>
          <value>Training</value>
          <value>Electronics</value>
          <value>Media</value>
          <value>Travel &amp; Hospitality</value>
          <value>Engineering</value>
          <value>Military</value>
        </domain>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="More Options" level="1" ename="options">
        <input>
          <operator name="I am looking for the following type of position" ename="type of position" />
          <domain format="radio_button">
            <vale>Permanent</vale>
            <vale>Contract / Temporary</vale>
            <vale>Either</vale>
          </domain>
        </input>
        <input>
          <operator name="Show me jobs posted in the last" ename="" />
          <domain format="radio_button">
            <value>7 days</value>
            <value>24 hours</value>
            <value>3 days</value>
            <value>4 hours</value>
            <value>2 days</value>
            <value>2 hours</value>
          </domain>
        </input>
        <input>
          <operator name="Show me jobs advertised on" ename="" />
          <domain format="radio_button">
            <value>GoJobsite UK</value>
            <value>GoJobsite Worldwide</value>
          </domain>
        </input>
        <input>
          <operator name="Show me jobs advertised on" ename="" />
          <domain format="radio_button">
            <value>Yes</value>
            <value>No</value>
          </domain>
        </input>
        <input>
          <operator name="Display job summaries with my results" ename="" />
          <domain format="radio_button">
            <value>Yes</value>
            <value>No</value>
          </domain>
        </input>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Specific Vacancy Search" ename="vacancy">
        <additional>Enter vacancy reference (if known)</additional>
        <domain format="text_box" />
      </attr>
    </attrgroup>
  </form>
</source>