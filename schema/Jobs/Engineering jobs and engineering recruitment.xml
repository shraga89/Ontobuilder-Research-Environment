<source url="http://www.justengineers.net/" interurl="http://www.justengineers.net/enhanced-search-form.asp">
  <srcname>Engineering jobs and engineering recruitment</srcname>
  <form>
    <attrgroup>
      <attr name="Skills/Job Title:" ename="skills|job title">
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Location:" ename="location">
        <domain format="selection_list">
          <value>...please select...</value>
          <value>UK</value>
          <value>Europe</value>
          <value>World Wide</value>
          <value>All</value>
        </domain>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Town/City:" ename="town|city">
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Type of Job:" ename="type of job">
        <domain format="selection_list">
          <value>All Jobs</value>
          <value>Permanent</value>
          <value>Contract/Temp</value>
        </domain>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Posted in the last:" ename="posted in the last">
        <domain format="selection_list">
          <value>7 days</value>
          <value>14 days</value>
          <value>21 days</value>
          <value>28 days</value>
        </domain>
      </attr>
    </attrgroup>
