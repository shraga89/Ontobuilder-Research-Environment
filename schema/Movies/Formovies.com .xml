<source url="http://www.formovies.com/" interurl="http://www.formovies.com/perl/formovies_advanced.cgi?type=MOVIE">
  <srcname> Formovies.com </srcname>
  <form name="Advanced Search">
    <attrgroup>
      <attr name="MOVIE TITLE" ename="title">
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="ACTOR/ACTRESS" ename="actor|actress">
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="DIRECTOR" ename="director">
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="FORMAT" ename="format">
        <domain format="check_box">
          <option>DVD</option>
          <option>VHS</option>
          <option>BOOKS ON AUDIO</option>
        </domain>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="CATEGORY" ename="category">
        <domain format="selection_list">
          <value>All</value>
          <value>Action/Martial Arts</value>
          <value>Adventure</value>
          <value>Children/Animated</value>
          <value>Classics</value>
          <value>Children's/Educational</value>
          <value>Comedy</value>
          <value>Documentary</value>
          <value>Drama/Romance</value>
          <value>Dark Comedy</value>
          <value>Family/Live Action</value>
          <value>Fighting</value>
          <value>Fitness</value>
          <value>Foreign</value>
          <value>Horror</value>
          <value>How-To</value>
          <value>Japanese Animation</value>
          <value>Musicals</value>
          <value>Music Videos</value>
          <value>Role Playing</value>
          <value>Science Fiction/Fantasy</value>
          <value>Simulation</value>
          <value>Special Interest/Travel</value>
          <value>Sports</value>
          <value>Strategy</value>
          <value>Suspense/Thriller/Mystery</value>
          <value>True Story</value>
          <value>TV Series</value>
          <value>Urban</value>
          <value>Vintage Television</value>
          <value>War</value>
          <value>Western</value>
        </domain>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="by zip/postal code:" ename="zipcode">
        <domain format="text_box" />
      </attr>
    </attrgroup>
  </form>
</source>