<source url="http://www.britannia-music.co.uk/" interurl="http://www.britannia-music.co.uk/AdvancedVisualSearchInput.do">
  <srcname> Britannia Music and Video - Video </srcname>
  <form name="advanced search DVD and video">
    <attrgroup>
      <attr name="Catalogue number" ename="catalog #">
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Film title" ename="title">
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Film genre" ename="genre">
        <domain format="selection_list">
          <value>All</value>
          <value>Action</value>
          <value>Adventure</value>
          <value>Children's</value>
          <value>Comedy</value>
          <value>Documentary</value>
          <value>Drama</value>
          <value>Family</value>
          <value>Horror</value>
          <value>Sci-Fi</value>
          <value>Martial Arts</value>
          <value>Music</value>
          <value>Musical</value>
          <value>Special Interest</value>
          <value>Sport</value>
          <value>Thriller</value>
          <value>TV Comedy</value>
          <value>TV Drama</value>
          <value>War</value>
          <value>Western</value>
        </domain>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Starring/Author" ename="star|author">
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Director" ename="director">
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Format" ename="format">
        <domain format="check_box">
          <option>DVD</option>
          <option>Video</option>
          <option>Book</option>
        </domain>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Certificate" ename="certificate">
        <domain format="selection_list">
          <value>All</value>
          <value>Uc</value>
          <value>U</value>
          <value>PG</value>
          <value>12</value>
          <value>15</value>
          <value>18</value>
          <value>E</value>
        </domain>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Wide screen" ename="wide screen">
        <domain format="selection_list">
          <value>All</value>
          <value>Yes</value>
          <value>No</value>
        </domain>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Close caption" ename="caption">
        <domain format="selection_list">
          <value>All</value>
          <value>Yes</value>
          <value>No</value>
        </domain>
      </attr>
    </attrgroup>
  </form>
</source>