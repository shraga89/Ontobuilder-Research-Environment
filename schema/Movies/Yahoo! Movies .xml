<source url="http://movies.yahoo.com/" interurl="http://movies.yahoo.com/advsearch/">
  <srcname> Yahoo! Movies </srcname>
  <form name="Search by Title">
    <attrgroup>
      <attr name="Title:" ename="title">
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Decade:" ename="decade">
        <domain format="selection_list">
          <value>All</value>
          <value>2000s</value>
          <value>1990s</value>
          <value>1980s</value>
          <value>1970s</value>
          <value>1960s</value>
          <value>1950s</value>
          <value>1940s</value>
          <value>1930s</value>
          <value>1920s</value>
          <value>1910s</value>
          <value>1900s</value>
        </domain>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Genre:" ename="genre">
        <domain format="selection_list">
          <value>All</value>
          <value>Action/Adventure</value>
          <value>Drama</value>
          <value>Comedy</value>
          <value>Romance</value>
          <value>Thriller</value>
          <value>Suspense/Horror</value>
          <value>Science Fiction/Fantasy</value>
          <value>Art/Foreign</value>
          <value>Kids/Family</value>
          <value>Documentary</value>
        </domain>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Synopsis Keywords:" operator="yes" ename="synopsis">
        <operator format="selection_list">
          <value>Match all synopsis keywords</value>
          <value>Match any synopsis keyword</value>
        </operator>
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Find only movies with:" ename="movie">
        <domain format="check_box">
          <option>Showtimes</option>
          <option>Trailers &amp; More</option>
          <option>Prod. Photos</option>
          <option>Premiere Photos</option>
          <option>News/Features</option>
          <option>Critics Reviews</option>
          <option>Prod. Notes</option>
          <option>Film Bios</option>
        </domain>
      </attr>
    </attrgroup>
  </form>
  <form name="Search by Cast/Crew" ename="cast/crew">
    <attrgroup>
      <attr name="Name:" ename="name">
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Job:" ename="job">
        <domain format="selection_list">
          <value>All</value>
          <value>Actor</value>
          <value>Director</value>
          <value>Screenwriter</value>
          <value>Producer</value>
          <value>Composer</value>
          <value>Editor</value>
          <value>Cinematographer</value>
          <value>Art Director</value>
          <value>Production Designer</value>
          <value>Costume Designer</value>
          <value>Sound Design</value>
          <value>Special Effects</value>
          <value>Director of Animation</value>
        </domain>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="2nd Job:" ename="job">
        <domain format="selection_list">
          <value>All</value>
          <value>Actor</value>
          <value>Director</value>
          <value>Screenwriter</value>
          <value>Producer</value>
          <value>Composer</value>
          <value>Editor</value>
          <value>Cinematographer</value>
          <value>Art Director</value>
          <value>Production Designer</value>
          <value>Costume Designer</value>
          <value>Sound Design</value>
          <value>Special Effects</value>
          <value>Director of Animation</value>
        </domain>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Find only cast/crew with:" ename="cast/crew">
        <domain format="check_box">
          <option>Prod. Photos</option>
          <option>Premiere Photos</option>
          <option>Biography</option>
        </domain>
      </attr>
    </attrgroup>
  </form>
  <form name="Search for an Online Short">
    <attrgroup>
      <attr name="Title:" ename="title">
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Genre:" ename="genre">
        <domain format="selection_list">
          <value>All</value>
          <value>Action/Adventure</value>
          <value>Animation</value>
          <value>Comedy</value>
          <value>Crime</value>
          <value>Documentary</value>
          <value>Drama</value>
          <value>Experimental</value>
          <value>Horror</value>
          <value>Romance</value>
          <value>Science Fiction</value>
          <value>Webisodes</value>
        </domain>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Synopsis Keywords:" ename="synopsis">
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Find only shorts to be played with:" ename="short">
        <domain format="check_box">
          <option>Windows Media</option>
          <option>Real Player</option>
          <option>Quicktime</option>
          <option>Flash/Shockwave</option>
        </domain>
      </attr>
    </attrgroup>
  </form>
</source>