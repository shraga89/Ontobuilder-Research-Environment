<source url="http://www.videocollection.com/" interurl="http://www.videocollection.com/search_unreg.htm">
  <srcname> Videocollection.com </srcname>
  <form>
    <comment>How to handle the "keywords" here?</comment>
    <attrgroup>
      <attr name="Title" operator="yes" ename="title">
        <operator format="check_box">
          <option>Exact Search</option>
        </operator>
        <domain format="text_box" />
      </attr>
      <attr name="Description" operator="yes" ename="description">
        <operator format="check_box">
          <option>Exact Search</option>
        </operator>
        <domain format="text_box" />
      </attr>
      <attr name="Code no." operator="yes" ename="code no">
        <operator format="check_box">
          <option>Exact Search</option>
        </operator>
        <domain format="text_box" />
      </attr>
      <attr name="Both Title &amp; Description" operator="yes" ename="title|description">
        <operator format="check_box">
          <option>Exact Search</option>
        </operator>
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="In Which Category?:" ename="category">
        <domain format="selection_list">
          <value>All</value>
          <value>Art and Music</value>
          <value>Comedy</value>
          <value>Crafts and Hobbies</value>
          <value>Drama and Features</value>
          <value>History and Military</value>
          <value>Mind, Body and Spirit</value>
          <value>Miscellaneous</value>
          <value>Nature and Science</value>
          <value>New Releases</value>
          <value>Sports</value>
          <value>Travel</value>
        </domain>
      </attr>
    </attrgroup>
  </form>
</source>