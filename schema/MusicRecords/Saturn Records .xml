<source url="http://www.saturnrecords.com/" interurl="http://www.saturnrecords.com/cgi-bin/saturn/asearch.html?id=neg3UN5m">
  <srcname> Saturn Records </srcname>
  <form name="Search by Field:">
    <attrgroup>
      <attr name="all fields" ename="all">
        <domain format="text_box" />
      </attr>
      <attr name="Title" ename="title">
        <domain format="text_box" />
      </attr>
      <attr name="Artist" ename="artist">
        <domain format="text_box" />
      </attr>
      <attr name="Description" ename="description">
        <domain format="text_box" />
      </attr>
      <attr name="Label" ename="label">
        <domain format="text_box" />
      </attr>
      <attr name="Keywords" ename="keyword">
        <domain format="text_box" />
      </attr>
    </attrgroup>
  </form>
  <form name="Search in Multiple Fields:">
    <comment>This form is hard to express</comment>
    <attrgroup>
      <attr name="Title" operator="yes" ename="title">
        <operator level="1">
          <operator format="radio_button">
            <value>Must Match All</value>
            <value>Match Any</value>
          </operator>
          <operator format="check_box">
            <option>Match Substrings</option>
            <option>Exact Match</option>
          </operator>
        </operator>
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Artist" operator="yes" ename="artist">
        <operator level="1">
          <operator format="radio_button">
            <value>Must Match All</value>
            <value>Match Any</value>
          </operator>
          <operator format="check_box">
            <option>Match Substrings</option>
            <option>Exact Match</option>
          </operator>
        </operator>
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Label" operator="yes" ename="label">
        <operator level="1">
          <operator format="radio_button">
            <value>Must Match All</value>
            <value>Match Any</value>
          </operator>
          <operator format="check_box">
            <option>Match Substrings</option>
            <option>Exact Match</option>
          </operator>
        </operator>
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Description" operator="yes" ename="description">
        <operator level="1">
          <operator format="radio_button">
            <value>Must Match All</value>
            <value>Match Any</value>
          </operator>
          <operator format="check_box">
            <option>Match Substrings</option>
            <option>Exact Match</option>
          </operator>
        </operator>
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Sort order:" level="1" ename="sort">
        <attr name="First By">
          <domain format="selection_list">
            <value>Title</value>
            <value>Artist</value>
            <value>Label</value>
            <value>Description</value>
          </domain>
        </attr>
        <attr name="Next By" ename="next">
          <domain format="selection_list">
            <value>Title</value>
            <value>Artist</value>
            <value>Label</value>
            <value>Description</value>
          </domain>
        </attr>
        <attr name="Last By" ename="last">
          <domain format="selection_list">
            <value>Title</value>
            <value>Artist</value>
            <value>Label</value>
            <value>Description</value>
          </domain>
        </attr>
      </attr>
    </attrgroup>
  </form>
