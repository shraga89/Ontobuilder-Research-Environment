<source url="http://www.energy-music.com/" interurl="http://www.energy-music.com/asps/SearchAdvanced.asp">
  <srcname> Energy Music </srcname>
  <form name="Advanced Search">
    <attrgroup>
      <attr name="Artist" operator="yes" ename="artist">
        <operator format="radio_button">
          <value>all</value>
          <value>any</value>
        </operator>
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Title" operator="yes" ename="title">
        <operator format="radio_button">
          <value>all</value>
          <value>any</value>
        </operator>
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Description" operator="yes" ename="description">
        <operator format="radio_button">
          <value>all</value>
          <value>any</value>
        </operator>
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Sort by" ename="sort">
        <domain format="radio_button">
          <value>artist</value>
          <value>title</value>
          <value>desc.</value>
          <value>price</value>
          <value>recent</value>
        </domain>
      </attr>
    </attrgroup>
  </form>
</source>