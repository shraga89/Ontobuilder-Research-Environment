<source url="http://www.gracenote.com/" interurl="http://www.gracenote.com/music/adv_search.html">
  <srcname> Music at Gracenote and CDDB </srcname>
  <form>
    <attrgroup>
      <attr name="Find in any field:" ename="any field">
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Artist:" operator="yes" ename="artist">
        <operator format="check_box">
          <option>Exact Phrase</option>
        </operator>
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Album:" operator="yes" ename="album">
        <operator format="check_box">
          <option>Exact Phrase</option>
        </operator>
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Song:" operator="yes" ename="song">
        <operator format="check_box">
          <option>Exact Phrase</option>
        </operator>
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Number of Results" ename="# of result">
        <domain format="selection_list">
          <value>10</value>
          <value>25</value>
        </domain>
      </attr>
    </attrgroup>
  </form>
</source>