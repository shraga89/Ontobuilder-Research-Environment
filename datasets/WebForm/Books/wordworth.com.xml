<source url="http://ishop.wordsworth.com" interurl="http://ishop.wordsworth.com/newsearch/searcher.asp?sessionID=ww8114747792018">
  <srcname>wordworth.com</srcname>
  <form>
    <attrgroup>
      <attr name="Title of Book" operator="yes" ename="title">
        <operator format="radio_button">
          <option>Exact Start of Title  </option>
          <option>Title Word(s)  </option>
        </operator>
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Author Name " ename="author">
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Keywords " ename="keyword">
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Field" ename="field" removed="yes">
        <domain format="selection_list">
          <value>Publication Date</value>
          <value>Price</value>
          <value>Binding</value>
          <value>Author</value>
          <value>Availability</value>
          <value>Title</value>
        </domain>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Order" ename="order" removed="yes">
        <domain format="selection_list">
          <value> Lowest to Highest </value>
          <value> Highest to Lowest </value>
        </domain>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="ISBN " ename="isbn">
        <domain format="text_box" />
      </attr>
    </attrgroup>
  </form>
</source>