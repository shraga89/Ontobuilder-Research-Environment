<source url="http://www.amazon.com" interurl="http://www.amazon.com/exec/obidos/ats-query-page/104-9929530-8214349">
  <srcname>amazon.com Book Search</srcname>
  <form>
    <attrgroup>
      <attr name="Author" ename="author">
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Title" ename="title">
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Subject" ename="subject">
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Publisher" ename="publisher">
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="ISBN" ename="isbn">
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="" ename="">
        <domain format="check_box">
          <option> Used Only </option>
        </domain>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Format" ename="format">
        <domain format="selection_list">
          <value>All formats</value>
          <value>Hardcover</value>
          <value>Paperback</value>
          <value>e-Book &amp; Docs</value>
          <value> Audio Downloads</value>
          <value>&gt;Audiobook (cassette or CD)</value>
          <value> Large print </value>
          <value> Calender </value>
        </domain>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Reader Age" ename="reader age">
        <domain format="selection_list">
          <value>All ages</value>
          <value>Baby-3 years</value>
          <value>4-8 years</value>
          <value>9-12 years</value>
          <value> Teen</value>
        </domain>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Publication Date" operator="yes" ename="publication date">
        <operator format="selection_list">
          <option> All dates</option>
          <option>Before the year </option>
          <option> During the year </option>
          <option> After the year </option>
        </operator>
        <domain format="text_box" />
        <additional> (e.g. 1999)  </additional>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Sort result by" ename="sort by" removed="yes">
        <domain format="selection_list">
          <value>Featured Item</value>
          <value>Bestselling</value>
          <value>Average Customer Review</value>
          <value>Price: low to high</value>
          <value>Price: high to low</value>
          <value>Publication date</value>
          <value>Alphabetically A to Z</value>
          <value>Alphabetically Z to A</value>
        </domain>
      </attr>
    </attrgroup>
  </form>
</source>