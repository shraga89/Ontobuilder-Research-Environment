<source url="http://www.whsmith.co.uk/" interurl="http://www.whsmith.co.uk/whs/Go.ASP?menu=Music&amp;type=form">
  <srcname> WHSmith.co.uk </srcname>
  <form>
    <attrgroup>
      <attr name="Artist" ename="artist">
        <additional>Keywords from the artist's name.</additional>
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Title" ename="title">
        <additional>Keywords from the product's title.</additional>
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Record Label" ename="label">
        <additional>Keywords from the name of the record label.</additional>
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Catalogue No." ename="catalog #">
        <additional>Exclusive if specified. At least first 4 digits.</additional>
        <domain format="text_box" />
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Entries to return per page" ename="entry per page">
        <domain format="selection_list">
          <value>25</value>
          <value>100</value>
          <value>250</value>
          <value>500</value>
          <value>1000</value>
        </domain>
      </attr>
    </attrgroup>
    <attrgroup>
      <attr name="Search Order" ename="order">
        <domain format="selection_list">
          <value>By Availability and Title</value>
          <value>By Availability and Release Date</value>
          <value>Alphabetically by Title</value>
          <value>Alphabetically within Category</value>
          <value>Publication Date (Most recent first)</value>
          <value>Price (cheapest first)</value>
          <value>Alphabetically by Artist</value>
        </domain>
      </attr>
    </attrgroup>
  </form>
</source>